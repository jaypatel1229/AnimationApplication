<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#278AB0"
    >


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv1"
        android:text="Aimation"
        android:textColor="#0000A3"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#E42256"
        />

    <Button
        android:layout_marginTop="70dp"
        android:id="@+id/viewbtn"
        android:text="View Animation"
        android:textColor="#0000A3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#E42256"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/probtn"
        android:text="Properti Animation"
        android:textColor="#0000A3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#E42256"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/Drabtn"
        android:text="Drawable Animation"
        android:textColor="#0000A3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#E42256"
        />
</LinearLayout>